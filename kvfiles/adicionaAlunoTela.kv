<AdicionaAlunoTela>
    canvas.before:
        Color:
            rgba: 0.85,0.85,0.85, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint: 1, 0.2
            padding: 10, 5
            BotaoVoltar:
                pos_hint: {'center_x': 1, 'top': 0.7}
            TituloTela:
                text: 'Adicionar aluno ao banco de dados'
            BotaoMenu:
                pos_hint: {'left': 1, 'top': 0.7}
        BoxLayout:
            size_hint: 0.5, 0.8
            padding: 20,10,20,20
            orientation: 'vertical'
            RoundedBox:
                BoxLayout:
                    orientation: 'vertical'
                    Image:
                        size_hint: 0.2, 0.2
                        pos_hint: {'center_x': 0.5}
                        source: 'Images/student.png'
                    FormAluno:
                        id: form
                        size_hint: 1, 0.7
                    BoxLayout:
                        orientation: 'horizontal'
                        pos_hint: {'right': 1}
                        size_hint: 1, 0.1
                        Label:
                            id: verificacao
                            color: 1,64/255,64/255, 0.7
                        Button:
                            padding: 0,50
                            size_hint: None, None
                            size: 60,60
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                            background_normal: 'Images/insert.png'
                            border: 0,0,0,0
                            on_release:
                                app.root.get_screen('Adiciona aluno').verifica_info()



<RoundedBox@BoxLayout>
    canvas.before:
        Color:
            rgba: 1,1,1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [0, self.size[0], 0, 50]
