<AdicionaAlunoTela>
    canvas.before:
        Color:
            rgba: 0.85,0.85,0.85, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint: 1, 0.2
            padding: 10, 5
            BotaoVoltar:
                pos_hint: {'center_x': 1, 'top': 0.7}
            TituloTela:
                text: 'Adicionar aluno ao banco de dados'
            BotaoMenu:
                pos_hint: {'left': 1, 'top': 0.7}
        BoxLayout:
            size_hint: 1, 0.8
            padding: 20,10,20,20
            RoundedBox:
                size_hint: 0.7, 1
                BoxLayout:
                    orientation: 'vertical'
                    Image:
                        padding: 0,20,0,0
                        size_hint: 0.2, 0.2
                        pos_hint: {'center_x': 0.5, 'center_y': 0}
                        source: 'Images/student.png'
                    FormAluno:
                        id: form
                        size_hint: 1, 0.7
                    BoxLayout:
                        orientation: 'horizontal'
                        pos_hint: {'right': 1}
                        size_hint: 1, 0.1
                        Label:
                            id: verificacao
                            color: 1,64/255,64/255, 0.7

            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.5, 1
                Label:
                    id: show_NomeSobrenome
                    color: 0,0,0,0.9
                Label:
                    id: show_Numero
                    color: 0,0,0,0.9
                Label:
                    id: show_Serie
                    color: 0,0,0,0.9
                Label:
                    id: show_Turma
                    color: 0,0,0,0.9
                BoxLayout:
                Button:
                    id: btn_config
                    background_color: 1,1,1,0
                    on_release:
                        app.root.get_screen('Adiciona aluno').verifica_info()

<RoundedBox@BoxLayout>
    canvas.before:
        Color:
            rgba: 1,1,1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [0, self.size[0], 0, 50]
