<BotaoDrop>
    orientation: 'vertical'
    Button:
        id: primeiro
        text: 'Teste'
        size_hint: 0.2, None
        height: 30
        on_release: primeiro_dropdown.open(self)

        Widget:
            on_parent: primeiro_dropdown.dismiss()

            DropDown:
                id: primeiro_dropdown
                Botaozinho:
                    id: primeiro_drop
                    text: 'Notas: '
                    color: 0,0,0,1
                    size_hint_y: None
                    height: 30
                Botaozinho:
                    id: segundo_drop
                    text: 'seg_drop'
                    size_hint_y: None
                    height: 30
    BoxLayout:
                        

<Botaozinho@Label>
    canvas.before:
        Color:
            rgba: 1,1,1, 1
        Rectangle:
            pos: self.pos
            size: self.size